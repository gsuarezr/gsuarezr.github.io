---
import Layout from '../layouts/Layout.astro';

const websites = [
  {
    category: 'Learning Resources',
    sites: [
      {
        name: 'MIT OpenCourseWare',
        url: 'https://ocw.mit.edu/courses/physics/',
        description: 'Free access to MIT physics course materials'
      },
      {
        name: 'arXiv',
        url: 'https://arxiv.org/',
        description: 'Open access to scientific research papers'
      },
      {
        name: 'Physics Stack Exchange',
        url: 'https://physics.stackexchange.com/',
        description: 'Q&A community for physics'
      }
    ]
  },
  {
    category: 'Tools & Software',
    sites: [
      {
        name: 'Wolfram Alpha',
        url: 'https://www.wolframalpha.com/',
        description: 'Computational knowledge engine'
      },
      {
        name: 'GeoGebra',
        url: 'https://www.geogebra.org/',
        description: 'Interactive mathematics software'
      }
    ]
  },
  {
    category: 'Research & Publications',
    sites: [
      {
        name: 'Google Scholar',
        url: 'https://scholar.google.com/',
        description: 'Search scholarly literature'
      },
      {
        name: 'INSPIRE-HEP',
        url: 'https://inspirehep.net/',
        description: 'High-energy physics literature database'
      }
    ]
  }
];
---

<Layout title="Recommended Websites">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">Recommended Websites</h1>
    
    <div class="space-y-12">
      {websites.map(category => (
        <section>
          <h2 class="text-2xl font-semibold mb-6">{category.category}</h2>
          <div class="grid gap-6">
            {category.sites.map(site => (
              <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6">
                <div class="flex justify-between items-start">
                  <div>
                    <h3 class="text-xl font-medium mb-2">
                      <a
                        href={site.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
                      >
                        {site.name}
                      </a>
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400">{site.description}</p>
                  </div>
                  <a
                    href={site.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200"
                  >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                </div>
              </div>
            ))}
          </div>
        </section>
      ))}
    </div>
  </div>
</Layout>